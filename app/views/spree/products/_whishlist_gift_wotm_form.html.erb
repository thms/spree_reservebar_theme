<div style="height:34px;margin-top:12px;">
	<% if current_user %>
	  <div id="wishlist-form" style="float:left;height:34px;margin-top:0px;">
	
	    <%= form_for Spree::WishedProduct.new do |f| %>
	      <%= f.hidden_field :variant_id, :value => @product.master.id %>
		  <span></span>
	      <a href="javascript:$('#new_spree_wished_product').submit();"><%= t(:add_to_wishlist) %></a>
	    <% end %>
	  </div>
	<% end %>

	<div class="gift-options-available" style="float:left;height:34px;">
		<span></span>
		<a href="javascript:$('#gift-packaging-dialog').dialog('open');">Gift Options Available</a>
	</div>

	<div class="whiskey-of-the-month" style="float:left;height:34px;">
	<span></span>
		<a href=#>Whiskey of the Month</a>
	</div>

</div>
<%= render :partial => 'spree/products/gift_packaging_modal' %>
<div style="clear:both;"></div>