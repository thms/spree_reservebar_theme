<h6 class="reviews-title">Full Reviews</h6>
<div id="reviews" data-hook="product_reviews">
	<% for review in @product.reviews.approval_filter.preview %>
  		<%= render :partial => 'spree/shared/review', :locals => {:review => review} %>
	<% end %>
	<% if (!Spree::Reviews::Config[:require_login] || current_user) %>
  		<%= link_to t('write_your_own_review'), new_product_review_path(@product), :class => "button", :rel => "nofollow,noindex" %>
	<% end %>
</div>
