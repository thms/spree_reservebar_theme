<style>
	#minicart-dialog .ui-icon {display:inline;}
	#minicart-dialog a.button {color:#fff;}
	#minicart-dialog div.price {font-size:36px;line-height:36px;color:#aaa;font-weight:bold}
	#minicart-dialog div.price:first-letter {font-size:28px;vertical-align:super;}
</style>

<script>
$(function() {
	// a workaround for a flaw in the demo system (http://dev.jqueryui.com/ticket/4375), ignore!
	$( "#dialog:ui-dialog" ).dialog( "destroy" );
	
	$("#minicart-dialog").dialog({
		autoOpen: false,
		height: 'auto',
		width: '80%',
		maxWidth: 630,
		modal: true,
		title: "",
		open: function(event, ui){ 
           fluidDialog(); // needed when autoOpen is set to true in this codepen
        },
        fluid: true,
		zIndex: 3000
	});

});
</script> 
<div id="minicart-dialog" style="display:none;" title="Thank You for Adding to Your Cart!">
	<div id="minicart-inner">
		<%= render :partial => "spree/shared/minicart_inner", :locals => {:product => @product} if @product %>
	</div>
	<div id="minicart-gift-packaging">
		<%= render :partial => "spree/shared/minicart_gift_packaging", :locals => {:product => @product} if @product %>
	</div>
	<div class="clearfix"></div>
	<div id="minicart-response"></div>
	<div class="clearfix"></div>
	
	<div class="buttons">
		<%= link_to_function t(:continue_shopping), '$("#minicart-dialog").dialog("close")', :class => 'button' %>
    	<%= link_to t(:view_shopping_cart), cart_path, :class => 'button', :id => 'checkout-link' %>
	</div>
</div>
